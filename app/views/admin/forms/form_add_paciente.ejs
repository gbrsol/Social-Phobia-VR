<html>
    <head>
        <title>Cadastrar Paciente</title>

        <!-- JQuery -->
		<script src="/js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="/css/style.css" rel="stylesheet">
    </head>
    <body>
        <div class="container" color:#FFFFFF>
            <H1 text-align:center>Formulário de Paciente</H1>
        </div>

        <% if(validacao.length > 0){ %>
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-danger">
                        <strong>Atenção!</strong>
                        <ul>
                            <% for(var i = 0; i < validacao.length; i++){ %>
                                <li>
                                    <%= validacao[i].msg %>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        <% } %>
        
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <form action="/forms/form_add_paciente/salvar" method="POST">
                        <div class="form-group">
                            <label for="id">ID Hospitalar</label>
                            <input type="text" id="id" name="id" placeholder="Digite o ID hospitalar" value="<%= campos.id%>"class="form-control"/>
                        </div>

                        <div class="form-group">
                            <label for="name">Nome Completo</label>
                            <input type="text" id="name" name="name" value="<%= campos.name%>" placeholder="Digite seu nome completo" class="form-control"/>
                        </div>

                        <div class="form-group">
                            <label for="age">Nome Completo</label>
                            <input type="number" min="1" id="age" name="age" value="<%= campos.age%>" placeholder="Informe sua idade" class="form-control"/>
                        </div>

                        <div class="form-group">
                            <label for="sex">Sexo</label>
                            <select name="sex" id="sex" class="form-control">
                                <option value="Masculino">Masculino</option>
                                <option value="Feminino">Feminino</option>
                                <option value="Outros">Outros</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="phone">Telefone</label>
                            <input type="tel" pattern="[0-9]{2}[0-9]{4,5}[0-9]{4}" id="phone" name="phone" placeholder="(00) 00000-0000" value="<%= campos.phone%>"class="form-control"/>
                        </div>

                        <div class="form-group">
                            <label for="address">Endereço Completo</label>
                            <input type="text" id="address" name="address" placeholder="" value="<%= campos.address%>"class="form-control"/>
                        </div>
    
                        <button type="submit" class="btn btn-default">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>